{
  "compilerOptions": {
    "outDir": "build/",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["ES2017", "DOM"],
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "strict": true,
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedParameters": true,
    "noImplicitThis": true
  },
  "include": ["src"]
}